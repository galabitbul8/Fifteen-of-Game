<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moves: 0000" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 00:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="284dp"
        android:layout_height="284dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/box">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/box1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="1" />

            <TextView
                android:id="@+id/box5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="5" />

            <TextView
                android:id="@+id/box9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="9" />

            <TextView
                android:id="@+id/box13"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/box2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="2" />

            <TextView
                android:id="@+id/box6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="6" />

            <TextView

                android:id="@+id/box10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="10" />

            <TextView
                android:id="@+id/box14"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/box3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="3" />

            <TextView
                android:id="@+id/box7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="7" />

            <TextView
                android:id="@+id/box11"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="11" />

            <TextView
                android:id="@+id/box15"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/box4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="4" />

            <TextView
                android:id="@+id/box8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="8" />

            <TextView
                android:id="@+id/box12"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="12" />

            <TextView
                android:id="@+id/box16"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:textSize="30sp"
                android:gravity="center"
                android:background="@drawable/box"
                android:text="" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/start_new_game" />

</LinearLayout>